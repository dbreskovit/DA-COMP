---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';

export interface Props {
  content: {
    title: string;
    description: string;
    initialDraftAt?: string;
    publishedAt?: string;
    updatedAt?: string;
    heroImage?: string;
    tags?: string[];
    readingTime: {
      text: string;
    };
  };
}

const {
  content: {
    title,
    description,
    initialDraftAt,
    publishedAt,
    updatedAt,
    heroImage,
    tags,
    readingTime: { text: minutesRead },
  },
} = Astro.props;
---

<html lang="pt-BR">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="bg-background">
    <Header />
    <main>
      <article>
        {
          heroImage && (
            <div
              class="w-full h-screen/2 bg-no-repeat bg-center bg-cover"
              style={{ backgroundImage: `url("${heroImage}")` }}
            />
          )
        }
        <div
          class="mt-12 prose prose-sm sm:prose-base md:prose-lg lg:prose-xl xl:prose-2xl dark:prose-invert prose-slate mx-auto p-4"
        >
          <!-- <h1 class="text-white">{title}</h1> -->
            <slot/>         
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
